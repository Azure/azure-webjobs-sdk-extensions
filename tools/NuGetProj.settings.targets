<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <WebJobsRootPath>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\'))</WebJobsRootPath>
    <WebJobsToolsPath>$(MSBuildThisFileDirectory)</WebJobsToolsPath>
    <WebJobsPackageEULA>http://www.microsoft.com/web/webpi/eula/aspnetcomponent_rtw_enu.htm</WebJobsPackageEULA>
    <Version>2.1.0</Version>
    <MobileAppsVersion>1.1.0</MobileAppsVersion>
    <DocDBVersion>1.1.0</DocDBVersion>
    <NotificationHubsVersion>1.1.0</NotificationHubsVersion>
    <TwilioVersion>1.1.0</TwilioVersion>
    <ApiHubsVersion>1.0.0</ApiHubsVersion>
    <HttpVersion>1.0.0</HttpVersion>
    <ApiHubsPrereleaseTag>-beta4</ApiHubsPrereleaseTag>
    <PrereleaseTag>-beta3</PrereleaseTag>
  </PropertyGroup>
  <Choose>
    <When Condition=" '$(IncludeBuildNumberInVersion)' == '1'">
      <PropertyGroup>
        <WebJobsPackageVersion>$(Version)$(PrereleaseTag)-$(BUILD_NUMBER)</WebJobsPackageVersion>
        <MobileAppsPackageVersion>$(MobileAppsVersion)$(PrereleaseTag)-$(BUILD_NUMBER)</MobileAppsPackageVersion>
        <DocDBPackageVersion>$(DocDBVersion)$(PrereleaseTag)-$(BUILD_NUMBER)</DocDBPackageVersion>
        <NotificationHubsPackageVersion>$(NotificationHubsVersion)$(PrereleaseTag)-$(BUILD_NUMBER)</NotificationHubsPackageVersion>
        <ApiHubPackageVersion>$(ApiHubsVersion)$(ApiHubsPrereleaseTag)-$(BUILD_NUMBER)</ApiHubPackageVersion>
        <TwilioPackageVersion>$(TwilioVersion)$(PrereleaseTag)-$(BUILD_NUMBER)</TwilioPackageVersion>
        <HttpPackageVersion>$(HttpVersion)$(PrereleaseTag)-$(BUILD_NUMBER)</HttpPackageVersion>
    </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <WebJobsPackageVersion>$(Version)$(PrereleaseTag)</WebJobsPackageVersion>
        <MobileAppsPackageVersion>$(MobileAppsVersion)$(PrereleaseTag)</MobileAppsPackageVersion>
        <DocDBPackageVersion>$(DocDBVersion)$(PrereleaseTag)</DocDBPackageVersion>
        <NotificationHubsPackageVersion>$(NotificationHubsVersion)$(PrereleaseTag)</NotificationHubsPackageVersion>
        <ApiHubPackageVersion>$(ApiHubsVersion)$(ApiHubsPrereleaseTag)</ApiHubPackageVersion>
        <TwilioPackageVersion>$(TwilioVersion)$(PrereleaseTag)</TwilioPackageVersion>
        <HttpPackageVersion>$(HttpVersion)$(PrereleaseTag)</HttpPackageVersion>
      </PropertyGroup>
    </Otherwise>
  </Choose>
</Project>